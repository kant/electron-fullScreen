{
	"name": "full-screen",
	"version": "1.0.3",
	"description": "Full screen",
	"author": {
		"name": "Lee JiHeum"
	},
	"main": "public/electron.js",
	"homepage": "./",
	"private": true,
	"dependencies": {
		"@ant-design/icons": "^4.3.0",
		"@testing-library/jest-dom": "^5.11.4",
		"@testing-library/react": "^11.1.0",
		"@testing-library/user-event": "^12.1.10",
		"antd": "^4.8.5",
		"electron-is-dev": "^1.2.0",
		"electron-log": "^4.3.0",
		"electron-updater": "^4.3.5",
		"is-electron": "^2.2.0",
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"react-router-dom": "^5.2.0",
		"react-scripts": "^4.0.1",
		"styled-components": "^5.2.1",
		"web-vitals": "^0.2.4"
	},
	"scripts": {
		"react-start": "react-scripts start",
		"electron-start": " electron .",
		"electron-debug": " electron --inspect=3000 .",
		"react-build": "react-scripts build",
		"electron-build": "electron-builder build -c.extraMetadata.main=build/electron.js",
		"clean": "rm -rf build dist",
		"start": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron .\"",
		"build": "yarn react-build && electron-builder build -c.extraMetadata.main=build/electron.js",
		"deploy": "yarn react-build && electron-builder build --win --publish always"
	},
	"eslintConfig": {
		"extends": [
			"react-app",
			"react-app/jest"
		]
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"concurrently": "^5.3.0",
		"cross-env": "^7.0.2",
		"electron": "^11.0.2",
		"electron-builder": "^22.9.1",
		"wait-on": "^5.2.0"
	},
	"build": {
		"productName": "FullScreen",
		"copyright": "Copyright Â© 2020 LeeJiHeum",
		"asar": true,
		"win": {
			"icon": "./public/logo512.png",
			"target": "nsis"
		},
		"nsis": {
			"shortcutName": "Full Screen",
			"artifactName": "Full Screen ${version}.${ext}",
			"uninstallDisplayName": "Full Screen Delete"
		},
		"directories": {
			"buildResources": "public"
		}
	},
	"license": "ISC",
	"repository": {
		"type": "git",
		"url": "https://github.com/siyul-jh/electron-fullScreen.git"
	}
}
